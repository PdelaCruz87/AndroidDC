<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivityBuscarSW">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15sp"
        android:text="BUSCAR PRODUCTO"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtidProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Inserte el ID del producto" />

        <ImageButton
            android:layout_width="50sp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:onClick="onClick"
            android:src="@drawable/ic_buscar" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvnombreBuscarP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:hint="Nombre Producto"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tvfechaBuscarP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:hint="Fecha del Producto"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tvprecioBuscarP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:hint="Precio del Producto"
        android:inputType="number"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tvubicacionBuscarP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:hint="Ubicacion del Producto"
        android:textSize="25sp" />

</LinearLayout>