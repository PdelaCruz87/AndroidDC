<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Adulto">

    <TextView
        android:id="@+id/txt_IMayor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:text="Mayor de Edad"
        android:textAlignment="center"
        android:textSize="35sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img_carro"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_below="@+id/txt_IMayor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30sp"
        android:background="@drawable/ic_auto" />

    <TextView
        android:id="@+id/txt_Num1"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:layout_below="@+id/img_carro"
        android:layout_marginLeft="50sp"
        android:layout_marginTop="20sp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="70sp"

        />

    <TextView
        android:id="@+id/txt_Num2"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:layout_below="@+id/img_carro"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20sp"
        android:layout_marginRight="50sp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="70sp" />

    <TextView
        android:id="@+id/txt_Mult"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:layout_below="@+id/img_carro"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:text="*"
        android:textAlignment="center"
        android:textSize="70sp" />

    <EditText
        android:id="@+id/txt_rNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_carro"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100sp"
        android:hint="Respuesta"
        android:textSize="35sp" />

    <Button
        android:id="@+id/btn_vAdulto"
        android:layout_width="125sp"
        android:layout_height="60sp"
        android:layout_below="@id/btn_gNum"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:onClick="adulto"
        android:text="VALIDAR" />

    <Button
        android:id="@+id/btn_sAdulto"
        android:layout_width="125sp"
        android:layout_height="60sp"
        android:layout_below="@+id/btn_vAdulto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:backgroundTint="#D31240"
        android:onClick="adulto"
        android:text="SALIR"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_gNum"
        android:layout_width="125sp"
        android:layout_height="60sp"
        android:layout_below="@id/txt_rNum"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:backgroundTint="#22E429"
        android:onClick="adulto"
        android:text="Aleatorio" />
</RelativeLayout>