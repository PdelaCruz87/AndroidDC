<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menor_Edad">

    <TextView
        android:id="@+id/txt_mEdad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:text="Menor de Edad"
        android:textAlignment="center"
        android:textSize="35sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img_mEdad"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_below="@+id/txt_mEdad"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30sp"
        android:background="@drawable/ic_biberon"

        />

    <TextView
        android:id="@+id/txt_meNum1"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:layout_below="@+id/img_mEdad"
        android:layout_marginLeft="50sp"
        android:layout_marginTop="20sp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="70sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_meNum2"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:layout_below="@+id/img_mEdad"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20sp"
        android:layout_marginRight="50sp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="70sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_Suma"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:layout_below="@+id/img_mEdad"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:text="+"
        android:textAlignment="center"
        android:textSize="70sp" />

    <EditText
        android:id="@+id/txt_rme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_mEdad"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100sp"
        android:hint="Respuesta"
        android:textSize="35sp" />

    <Button
        android:id="@+id/btn_gmeNum"
        android:layout_width="125sp"
        android:layout_height="60sp"
        android:layout_below="@+id/txt_rme"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:backgroundTint="#22E429"
        android:onClick="menor"
        android:text="Aleatorio" />

    <Button
        android:id="@+id/btn_vMenor"
        android:layout_width="125sp"
        android:layout_height="60sp"
        android:layout_below="@+id/btn_gmeNum"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:onClick="menor"
        android:text="VALIDAR"

        />

    <Button
        android:id="@+id/btn_sMenor"
        android:layout_width="125sp"
        android:layout_height="60sp"
        android:layout_below="@+id/btn_vMenor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:backgroundTint="#D31240"
        android:onClick="menor"
        android:text="SALIR"

        />


</RelativeLayout>