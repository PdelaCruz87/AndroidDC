<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Poema_Lealtad">

    <TextView
        android:id="@+id/txtLealtad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LEALTAD"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginTop="30sp"
        />
<ImageView
    android:id="@+id/img_Lealtad"
    android:layout_width="100sp"
    android:layout_height="100sp"
    android:layout_centerHorizontal="true"
    android:background="@drawable/ic_lealtad"
    android:layout_below="@+id/txtLealtad"
    android:layout_marginTop="20sp"
    />
    <LinearLayout
        android:id="@+id/lLLealtad"
        android:layout_below="@id/img_Lealtad"
        android:layout_width="match_parent"
        android:layout_height="350sp">
    <ScrollView
        android:id="@+id/scv_Parrafo"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_below="@id/img_Lealtad"
        android:layout_marginTop="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<TextView
    android:id="@+id/txt_Poema"
    android:text="Yo tengo una Bandera bicolor, que indica que sigamos
    la senda del honor. Mi Bandera y mi Escudo con su bello quetzal
    simbolizan la patria, Guatemala inmortal."
    android:textSize="30sp"
    android:textAlignment="textStart"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    />

    </LinearLayout>
    </ScrollView>
    </LinearLayout>
    <Button
        android:id="@+id/btn_SalirL"
        android:text="Salir"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:layout_below="@id/lLLealtad"
        android:onClick="sLealtad"
        />
</RelativeLayout>