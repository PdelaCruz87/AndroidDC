<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivityEliminar">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="25sp"
        android:text="ELIMINAR MASCOTA"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtbuscarMascotaEliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:hint="Ingrese ID a buscar"
            android:inputType="number"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnbuscarMascotaEliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:backgroundTint="#E30000"
            android:onClick="onClick"
            android:text="BUSCAR"
            android:textSize="18sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/edtNombreEliminar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:hint="..."
        android:textSize="25sp" />
    <TextView
        android:id="@+id/edtRazaEliminar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:hint="..."
        android:textSize="25sp" />
    <TextView
        android:id="@+id/edtColorEliminar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:hint="..."
        android:textSize="25sp" />
    <TextView
        android:id="@+id/edtEdadEliminar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:hint="..."
        android:textSize="25sp" />
    <Button
        android:id="@+id/btn_eliminarMascota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15sp"
        android:onClick="onClick"
        android:text="ELIMINAR"
        android:textSize="25sp" />
</LinearLayout>